Button < UIButton
  font: cipsoftFont
  color: #dfdfdfff
  size: 43 20
  text-offset: 0 2
  image-source: /images/ui/buttons
  image-clip: 0 0 43 20
  image-border: 1
  padding: 10
  opacity: 1.0

  $hover !disabled:
    image-clip: 0 0 43 20

  $pressed:
    image-clip: 0 20 43 20
    text-offset: 1 1
  
  $on:
    image-clip: 0 20 43 20
    text-offset: 1 1

  $checked:
    image-clip: 0 20 43 20
    text-offset: 1 1

  $disabled:
    color: #dfdfdf88
    opacity: 0.8
    change-cursor-image: false

TabButton < UIButton
  size: 22 23
