ForgeItem < Panel
  id: forgeItem
  size: 60 80
  Item
    id: item
    size: 64 64
    margin-left: 3
    anchors.top: parent.top
  UIWidget
    id: image
    anchors.top: prev.top
    anchors.left: prev.left
    image-source: /images/game/forge/dust
    size: 64 64
  Panel
    id: countPanel
    image-source: /images/ui/item
    image-border: 10
    anchors.top: item.bottom
    margin-top: 2
    anchors.left: prev.left
    anchors.right: prev.right
    size: 86 22
    Label
      id: value
      text: 100
      anchors.verticalCenter: parent.verticalCenter
      anchors.horizontalCenter: parent.horizontalCenter
      margin-right: 5
      text-align: center
      text-auto-resize: true
    UIWidget
      id: icon
      anchors.verticalCenter: prev.verticalCenter
      anchors.left: prev.right
      margin-left: 5
      image-source: /images/game/forge/icon-currency-sliver

