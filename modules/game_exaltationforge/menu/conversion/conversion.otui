ForgePanel < Panel
  width: 153
  color: #dfdfdf
  text-align: top
  !text: tr('Convert Dust')
  padding-top: 21
  image-source: /images/ui/window_new
  image-border: 4
  color: #BFBFBF
  font: verdana-11px-monochrome
  draggable: false

ForgeTextWithIcon < Panel
  Label
    id: value
    text: Generate 66666
    anchors.verticalCenter: parent.verticalCenter
    anchors.horizontalCenter: parent.horizontalCenter
    text-align: center
    text-auto-resize: true
  UIWidget
    id: icon
    anchors.verticalCenter: prev.verticalCenter
    anchors.left: prev.right
    margin-left: 5
    image-source: /images/game/forge/icon-currency-sliver

